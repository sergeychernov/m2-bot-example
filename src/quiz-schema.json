{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "type", "question"],
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1
      },
      "type": {
        "type": "string",
        "enum": ["text", "buttons"]
      },
      "question": {
        "type": "string",
        "minLength": 1
      },
      "options": {
        "type": "array",
        "items": { "type": "string" },
        "minItems": 1
      },
      "required": {
        "type": "boolean"
      }
    },
    "additionalProperties": false,
    "if": {
      "properties": { "type": { "const": "buttons" } }
    },
    "then": {
      "required": ["options"]
    }
  }
} 